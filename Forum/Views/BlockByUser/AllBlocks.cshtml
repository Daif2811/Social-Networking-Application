@model IEnumerable<Forum.Models.BlockByUser>

@{
    ViewData["Title"] = "AllBlocks";
}

<h3 class="bg-dark text-center text-light p-2 m-3">All Blocked Users</h3>
<hr />

<table class="table table-hover">
@foreach (var item in Model)
{
    <tr>
        <td>
            <a href="~/Post/ProfileSomeOne?userId=@item.UserId" style="text-decoration:none;">

                @if (item.User.Picture != null)
                {
                    <img src="~/images/@item.User.Picture" class="rounded-circle img-thumbnail" width="55px;" />

                }
                else
                {
                    <img src="~/images/No User Image/User_Image.png" class="rounded-circle img-thumbnail" width="55px;" />
                }
                <span> @item.User.UserName</span>
            </a>
        </td>
    </tr>
}
</table>