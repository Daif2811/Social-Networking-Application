@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "EditRole";
}

<h1 class="text-white bg-dark text-center p-2">Edit Role</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRole">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="NormalizedName" hidden />
            <input asp-for="ConcurrencyStamp" hidden />
            <input asp-for="Id" hidden />


            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-success" />
                <a asp-action="Roles" class="btn btn-outline-primary">Roles</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
