@model Forum.ViewModels.EditProfileViewModel

@{
    ViewData["Title"] = "EditProfile";
}

<h3 class="bg-dark text-center text-light p-2 mb-3">Edit Profile</h3>
<hr />


    <div>
        <form asp-action="EditProfile" enctype="multipart/form-data" method="post" class="row">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group col-md-6 mb-4">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-4">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-4">
                <label asp-for="Picture" class="control-label"></label>
                <input asp-for="Picture" type="file" value="Change Photo" class="form-control" />
                <img src="~/images/@Model.Picture" class="rounded-circle img-thumbnail" style="width:50px;" id="photo"/>
               
                <div id="photoModal" class="modal text-xl-center">
                    <img src="" alt="Photo" id="bigPhoto" />
                </div>
                
                <span asp-validation-for="Picture" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-4">
                <label asp-for="Summary" class="control-label"></label>
                <input asp-for="Summary" class="form-control" />
                <span asp-validation-for="Summary" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-4">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
           
            <div class="form-group col-md-6 mb-4">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-4 row">

                <p class="m-0 p-0 text-primary">Save Or Cancel</p>
                <input type="submit" value="Save" class="btn btn-outline-success col" />
                <a asp-action="Index" asp-controller="Home" class="btn btn-outline-dark col">Home</a>

            </div>
            
        </form>
    </div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>

        var photo = document.getElementById("photo");
        var div = document.getElementById("photoModal");
        var bigPhoto = document.getElementById("bigPhoto");

        // On click open the photo
        photo.addEventListener("click", function () {
            bigPhoto.src = this.src;
            div.style.display = "block";
        });

        // Close the modal when clicking outside of the image
        div.addEventListener("click", function () {
            div.style.display = "none";
        });
    </script>
}
