@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Summary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @if (item.PhoneNumber != null)
                    {
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    }
                    else
                    {
                        @Html.ActionLink("Empty, Click to Add", "EditProfile")

                    }

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Summary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserType)
                </td>
                <td>
                    <img src="~/images/@Html.DisplayFor(modelItem => item.Picture)" class=" img-thumbnail rounded-circle" style="width:50px; cursor:pointer" id="photo" />
                    @*<img src="@Url.Content("~/images/" + item.Picture)" alt="@item.Picture">*@

                    <div id="photoModal" class="modal text-xl-center">
                        <img src="" alt="Photo" id="bigPhoto" />
                    </div>
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
    </tbody>
</table>


@section Scripts {

    <script>

        var photo = document.getElementById("photo");
        var div = document.getElementById("photoModal");
        var bigPhoto = document.getElementById("bigPhoto");

        // On click open the photo
        photo.addEventListener("click", function () {
            bigPhoto.src = this.src;
            div.style.display = "block";
        });

        // Close the modal when clicking outside of the image
        div.addEventListener("click", function () {
            div.style.display = "none";
        });
    </script>
}