@model IEnumerable<Forum.Models.Chat>
@{
    string currentUserId = ViewBag.CurrentUserId;
}

@{
    ViewData["Title"] = "LikeUsers";
}

<h3 class="bg-dark text-center text-light p-2 m-3">Chat</h3>
<hr />

<table class="table table-hover table-bordered">
   
    @foreach (var item in Model)
    {
        if (item.CurrentUserId == currentUserId)
        {
        <tr>
            <td>
                <a href="~/Chat/OpenChat?userId=@item.UserId" style="text-decoration:none;">
                    @if (item.User.Picture != null)
                    {
                        <img src="~/images/@item.User.Picture" class="rounded-circle img-thumbnail" width="55px;" />
                    }
                    else
                    {
                        <img src="~/images/No User Image/User_Image.png" class="rounded-circle img-thumbnail" width="55px;" />
                    }
                    <span> @item.User.UserName</span>
                </a>
            </td>
        </tr>
        }
        else
        {
            <tr>
                <td>
                    <a href="~/Chat/OpenChat?userId=@item.CurrentUserId" style="text-decoration:none;">
                        @if (item.CurrentUser.Picture != null)
                        {
                            <img src="~/images/@item.CurrentUser.Picture" class="rounded-circle img-thumbnail" width="55px;" />
                        }
                        else
                        {
                            <img src="~/images/No User Image/User_Image.png" class="rounded-circle img-thumbnail" width="55px;" />
                        }
                        <span> @item.CurrentUser.UserName</span>
                    </a>
                </td>
            </tr>
        }
    }
</table>

