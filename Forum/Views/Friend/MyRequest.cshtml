@model IEnumerable<Forum.Models.FriendRequest>

@{
    ViewData["Title"] = "MyRequest";
}

<h1 class="p-3 bg-dark text-light text-center">My Friend Requests</h1>

<p>
    <a asp-action="Create" class="btn btn-info">Add New Friends</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>

            <th>

            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>


                <td>
                    <a href="~/Post/ProfileSomeOne?userId=@item.Sender.Id" style="text-decoration:none;">

                        @if (item.Sender.Picture != null)
                        {
                            <img src="~/images/@item.Sender.Picture" class="rounded-circle img-thumbnail" width="55px;" />

                        }
                        else
                        {
                            <img src="~/images/No User Image/User_Image.jpg" class="rounded-circle img-thumbnail" width="55px;" />
                        }
                        <span> @item.Sender.UserName</span>
                    </a>




                </td>
                <td>
                    <sub>
                        <sub>
                            <sub>
                                <sub>
                                    <a asp-action="AcceptRequest" asp-route-id="@item.Id" asp-route-accept="true" class="btn btn-outline-success">Accept</a>
                                    <a asp-action="AcceptRequest" asp-route-id="@item.Id" asp-route-accept="false" class="btn btn-outline-danger">Remove</a>
                                </sub>
                            </sub>
                        </sub>
                    </sub>

                </td>
            </tr>
        }
    </tbody>
</table>
