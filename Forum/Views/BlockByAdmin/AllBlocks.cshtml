@model IEnumerable<Forum.Models.BlockByAdmin>

@{
    ViewData["Title"] = "AllBlocks";
}

<h1 class="bg-dark text-center text-light p-2">All Blocked Users</h1>

<table class="table table-hover">

@foreach (var item in Model)
{
    <tr>
        <td>
            <a href="~/Post/ProfileSomeOne?userId=@item.UserId" style="text-decoration:none;">

                @if (item.User.Picture != null)
                {
                    <img src="~/images/@item.User.Picture" class="rounded-circle img-thumbnail" width="55px;" />

                }
                else
                {
                    <img src="~/images/No User Image/User_Image.jpg" class="rounded-circle img-thumbnail" width="55px;" />
                }
                <span> @item.User.UserName</span>
            </a>
        </td>
    </tr>
}
</table>