@model Forum.Models.Comment

@{
    ViewData["Title"] = "Delete";
}

<h3 class="text-center bg-black text-light p-2 m-3">Delete Comment</h3>
<hr />

<h5>Are you sure you want to delete this?</h5>
<hr />


<div class="container">
    <div class="form-group row m-3">
        <span>@Model.PublishDate</span>
        <textarea asp-for="Content" style="min-height:100px;" class="form-control col-12" disabled></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="row m-3">
        <form asp-action="Delete">
            <input type="submit" value="Delete" class="btn btn-outline-danger" /> |
            <a asp-action="ShowComments" asp-controller="Post" asp-route-postId="@Model.PostId" class="btn btn-outline-primary">Back to Post</a>
        </form>
    </div>

</div>
